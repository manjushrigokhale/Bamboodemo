{
  "description": "newjavademo Webapp Image",
  "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_az": "",
        "aws_region": ""
    },
  "builders": [
    {
      "type": "amazon-ebs",
      "ami_name": "newjavademo-webapp-{{timestamp}}",
      "availability_zone": "{{user `aws_az`}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "iam_instance_profile": "packer",
      "instance_type": "t2.micro",
      "region": "{{user `aws_region`}}",
      "run_tags": {
        "role": "packer"
      },
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "*ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "ssh_timeout": "10m",
      "ssh_username": "ubuntu",
      "tags": {
        "ImageType": "newjavademo-webapp-packer-image"
      },
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 8,
          "delete_on_termination": true
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 8,
          "delete_on_termination": true
        }
      ],
      "spot_price_auto_product": "Linux/UNIX (Amazon VPC)"
    }
  ],
  "provisioners": [
       {
      "type": "shell",
      "inline": [
         "sleep 30",
         "sudo apt-get update",
         "sudo apt-get install -y python",
         "sudo apt-get install -y python-pip",
         "pip install awscli"
       ]
     },
    {
      "type": "shell",
      "inline": "sudo apt-get install openjdk-8-jdk",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "inline": [
          "mkdir -p /tmp/workspace/"
      ]
    },
    {
      "type": "shell",
      "inline": [ "sleep 10" ]
    }, 
      {
      "type": "file",
      "source": "/var/lib/jenkins/workspace/packer-demo/target/",
      "destination": "/tmp/workspace/"
    },
    {
      "type": "shell",
      "inline": [
          "mkdir -p /home/ubuntu/newjavademo/",
          "sudo cp -rf /tmp/workspace /home/ubuntu/newjavademo/"
      ]
    },
        {
      "type": "shell",
      "inline": [ "sleep 10" ]
    } 
  ]
}
